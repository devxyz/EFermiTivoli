<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/logo_fermi_100x100"
               android:id="@+id/imageView"
               android:padding="5dp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true" android:background="@color/color_blue_scuro"
               android:visibility="invisible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="I.T.C.G.\n&quot;Enrico Fermi&quot;\nTivoli (RM)"
            android:id="@+id/textView5" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold" android:textColor="@color/color_white" android:textSize="26dp"
            android:layout_alignBottom="@+id/imageView" android:background="@color/color_blue_scurissimo"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Continua senza aggiornare >" android:id="@+id/txtInfo"
              android:background="@color/color_blue_scurissimo" android:textSize="22dp"
              android:textColor="@color/color_white" android:paddingLeft="10dp" android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:gravity="center_horizontal"
              android:layout_alignParentBottom="true"
              android:paddingRight="10dp"
              android:layout_marginTop="5dp"/>
    <ProgressBar style="?android:attr/progressBarStyleLarge" android:layout_width="match_parent"
                 android:layout_height="wrap_content" android:id="@+id/progressBar9" android:indeterminate="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/textView5"
                 android:layout_toStartOf="@+id/textView5" android:layout_alignBottom="@+id/imageView"
                 android:layout_alignParentTop="true" android:layout_alignParentEnd="false"
                 android:background="@color/color_blue_scurissimo"/>
    <TextView

            android:text="   "
            android:id="@+id/txtfoto" android:layout_alignParentLeft="false"

            android:background="@drawable/fermi_tivoli_foto" android:gravity="center_horizontal"
            android:textColor="@color/color_red_scuro" android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent" android:layout_height="fill_parent"
            android:layout_above="@+id/txtInfo" android:layout_below="@+id/textViewMsgUpdate"
            />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Aggiornamento dati..."
            android:id="@+id/textViewMsgUpdate"
            android:gravity="center_horizontal"
            android:textSize="20dp" android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:textColor="#ffffff00" android:textStyle="bold"
            android:background="@color/color_red" android:padding="5dp"
            />



</RelativeLayout>
