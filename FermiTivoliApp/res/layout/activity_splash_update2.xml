<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/nome_scuola_denominazione"
            android:id="@+id/textView5"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold" android:textColor="@color/color_blue_scurissimo" android:textSize="26dp"
            android:layout_below="@+id/textView9"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text=">> Menu >>" android:id="@+id/txtInfo"
              android:background="@color/color_blue_scurissimo" android:textSize="22dp"
              android:textColor="@color/color_white" android:paddingLeft="5dp" android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:gravity="center_horizontal"
              android:layout_alignParentBottom="true"
              android:paddingRight="5dp"
              android:layout_marginTop="5dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Oggi in evidenza"
            android:id="@+id/textViewMsgUpdate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_below="@+id/textView10"
            android:layout_marginRight="15dp" android:layout_marginLeft="15dp"
            android:background="@color/color_blue_scurissimo" android:textColor="@color/color_white"
            android:textStyle="bold" android:paddingLeft="20dp" android:paddingTop="5dp" android:paddingBottom="5dp"
            android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nome_scuola_tipologia"
            android:id="@+id/textView9"
            android:textSize="16dp" android:gravity="center_horizontal" android:textStyle="bold"
            android:textColor="@color/color_blue_scurissimo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="5dp"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="@string/nome_scuola_comune" android:id="@+id/textView10" android:textSize="16dp"
              android:gravity="center_horizontal" android:textStyle="bold"
              android:textColor="@color/color_blue_scurissimo"
              android:layout_below="@+id/textView5" android:layout_centerHorizontal="true"
              android:paddingBottom="5dp"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewCircolariDelGiorno" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_below="@+id/textViewMsgUpdate"
            android:layout_above="@+id/txtInfo"
            android:choiceMode="singleChoice" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"/>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:indeterminate="true"/>


</RelativeLayout>
