<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title"
            android:id="@+id/textViewTitle"
            android:textStyle="bold"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|center_horizontal" android:padding="5dp"/>
        <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Descrizione"
                android:id="@+id/textViewDescrizione" android:paddingTop="10dp" android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_below="@+id/progressBar"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar" android:layout_below="@+id/textViewTitle"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
</RelativeLayout>