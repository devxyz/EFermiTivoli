<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:orientation="vertical"
        >

        <TextView
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:id="@+id/date"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/imageButton3"
                android:textColor="@color/color_blue_scuro"
                android:paddingLeft="5dp" android:paddingRight="5dp" android:hint="Inserire i termini da cercare"
                android:layout_toRightOf="@+id/imageButton_left" android:layout_toLeftOf="@+id/imageButton_right"
                android:layout_toStartOf="@+id/imageButton_right" android:text="12/05/2014" android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Medium"
                />
        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView"
                android:layout_above="@+id/textViewAvviso" android:layout_below="@+id/checkBox"
                android:background="@color/color_white"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3" android:layout_alignParentTop="true" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:src="@drawable/calendar_preferences_50x50"
                android:background="@color/color_white" android:layout_marginLeft="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textViewAvviso"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/imageButton3" android:layout_alignParentBottom="true"
                android:textColor="@color/color_white" android:background="@color/color_blue_scurissimo"
                android:gravity="center_vertical|center_horizontal" android:paddingLeft="5dp"
                android:paddingRight="5dp" android:layout_alignTop="@+id/progressBar5"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton_left" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:src="@drawable/left_arrow_30x30"
                android:layout_above="@+id/checkBox" android:layout_marginLeft="10dp"
                />
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:id="@+id/imageButton_right"
                     android:src="@drawable/right_arrow_30x30"
                     android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/imageButton3"
                     android:layout_toStartOf="@+id/imageButton3"
                     android:layout_above="@+id/checkBox"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visualizza circolari pubblicate in questo giorno"
                android:id="@+id/checkBox"
                android:checked="false"
                android:layout_below="@+id/date" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:background="@color/color_blue_chiaro"
                android:textColor="@color/color_white" android:textAppearance="?android:attr/textAppearanceSmall"/>
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar5" android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nessuna circolare trovata per il giorno specificato"
                android:id="@+id/textViewListaVuota" android:layout_below="@+id/checkBox"
                android:gravity="center_horizontal" android:layout_alignBottom="@+id/listView"
                android:paddingTop="10dp"/>
</RelativeLayout>

