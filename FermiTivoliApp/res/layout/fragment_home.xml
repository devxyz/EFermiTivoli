<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/logo_fermi_100x100"
               android:id="@+id/imageView"
               android:padding="5dp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
               android:layout_alignParentStart="false"
               android:layout_alignParentBottom="false"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView4" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_below="@+id/imageView"
            android:layout_above="@+id/txtInfo"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/nome_scuola_denominazione"
            android:id="@+id/textView5"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="false"
            android:gravity="center_vertical|center_horizontal|clip_vertical"
            android:textStyle="bold" android:textSize="22dp"
            android:textIsSelectable="false" android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/imageView" android:layout_toEndOf="@+id/imageView"
            android:textColor="@color/color_blue_scurissimo"
            android:layout_below="@+id/textView14"
            android:layout_above="@+id/textView15"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="XX notizie non lette" android:id="@+id/txtInfo"
              android:paddingLeft="20dp" android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" android:textAppearance="?android:attr/textAppearanceMedium"
              android:background="@color/color_dialog_title_background"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="tipoUtente"
            android:id="@+id/textViewTipoUtente" android:layout_above="@+id/listView4"
            android:layout_alignRight="@+id/textView5" android:layout_alignEnd="@+id/textView5"
            android:layout_toRightOf="@+id/imageView" android:layout_toEndOf="@+id/imageView"
            android:paddingLeft="10dp" android:gravity="right"
            android:paddingRight="10dp" android:textColor="@color/color_blue_scurissimo" android:textStyle="bold"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome_scuola_tipologia"
            android:id="@+id/textView14" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView"
            android:layout_alignRight="@+id/textView5" android:layout_alignEnd="@+id/textView5"
            android:textColor="@color/color_blue_scurissimo"
            android:textStyle="bold" android:textSize="16dp" android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome_scuola_comune"
            android:id="@+id/textView15" android:layout_above="@+id/textViewTipoUtente"
            android:layout_toRightOf="@+id/imageView" android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5"
            android:textColor="@color/color_blue_scurissimo" android:textStyle="bold" android:textSize="16dp"
            android:gravity="center_horizontal"/>


</RelativeLayout>
