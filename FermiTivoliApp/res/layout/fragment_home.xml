<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/logo_fermi_100x100"
               android:id="@+id/imageView"
               android:padding="5dp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
               android:layout_alignParentStart="false" android:background="@color/color_blue_scuro"
               android:layout_alignParentBottom="false"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView4" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_below="@+id/imageView"
            android:layout_above="@+id/txtInfo"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="I.T.C.G.\n&quot;Enrico Fermi&quot;\nTivoli (RM)"
            android:id="@+id/textView5" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="false"
            android:gravity="center_vertical|center_horizontal|clip_vertical"
            android:textStyle="bold" android:textSize="22dp"
            android:textIsSelectable="false" android:paddingLeft="10dp" android:background="@color/color_blue_scurissimo"
            android:textColor="@color/color_white"
            android:layout_toRightOf="@+id/imageView" android:layout_toEndOf="@+id/imageView"
            android:layout_above="@+id/textViewTipoUtente"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="XX notizie non lette" android:id="@+id/txtInfo"
              android:background="@color/color_blue_scurissimo"
              android:textColor="@color/color_white" android:paddingLeft="20dp" android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" android:textAppearance="?android:attr/textAppearanceMedium"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="tipoUtente"
            android:id="@+id/textViewTipoUtente" android:layout_above="@+id/listView4"
            android:layout_alignRight="@+id/textView5" android:layout_alignEnd="@+id/textView5"
            android:layout_toRightOf="@+id/imageView" android:layout_toEndOf="@+id/imageView"
            android:background="@color/color_blue_scurissimo"
            android:textColor="@color/color_blue_chiaro" android:paddingLeft="10dp" android:gravity="right"
            android:paddingRight="10dp"/>


</RelativeLayout>
