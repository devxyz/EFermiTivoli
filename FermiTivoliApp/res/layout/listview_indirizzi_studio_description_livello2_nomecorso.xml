<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp" >

    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Specializzazione"
            android:textStyle="bold"
            android:gravity="center_vertical" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:textColor="@color/color_blue_scurissimo"
            android:layout_marginLeft="10dp" android:textAppearance="?android:attr/textAppearanceMedium"/>

</RelativeLayout>
